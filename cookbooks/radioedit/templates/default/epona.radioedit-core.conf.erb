[program:radioedit-core]
command=<%= node[:radioedit][:epona][:venv_path] %>/bin/gunicorn <%= node[:radioedit][:epona][:module] %> -c <%= node[:radioedit][:epona][:path] %>/shared/gunicorn_config.py
process_name=%(program_name)s
numprocs=1
numprocs_start=0
autostart=false
autorestart=true
startsecs=1
startretries=3
exitcodes=0,2
stopsignal=TERM
stopwaitsecs=10
user=ihr-deployer
redirect_stderr=false
stdout_logfile=<%= node[:radioedit][:epona][:out_log] %>
stdout_logfile_maxbytes=50MB
stdout_logfile_backups=10
stdout_capture_maxbytes=0
stdout_events_enabled=false
stderr_logfile=<%= node[:radioedit][:epona][:err_log] %>
stderr_logfile_maxbytes=50MB
stderr_logfile_backups=10
stderr_capture_maxbytes=0
stderr_events_enabled=false
directory=<%= node[:radioedit][:epona][:path] %>/current
serverurl=AUTO
# agent
agent1.sources   = avro_src
agent1.channels  = mem_channel
agent1.sinks     = hdfs_sink

# memory channel
agent1.channels.mem_channel.type                 = memory
agent1.channels.mem_channel.capacity             = 5000
agent1.channels.mem_channel.transactionCapacity  = 100

# avro source
agent1.sources.avro_src.type     = avro
agent1.sources.avro_src.bind     = 0.0.0.0
agent1.sources.avro_src.port     = <%= @node[:flume_ng][:hadoop][:namenode][:avro_port] %>
agent1.sources.avro_src.threads  = 5
agent1.sources.avro_src.channels = mem_channel

# hdfs sink
agent1.sinks.hdfs_sink.type               = hdfs
agent1.sinks.hdfs_sink.hdfs.path          = /data/logs/%{log_type}/%Y/%m/%d
agent1.sinks.hdfs_sink.hdfs.timeZone      = EST5EDT
agent1.sinks.hdfs_sink.hdfs.filePrefix    = log-
agent1.sinks.hdfs_sink.hdfs.rollInterval  = 0
agent1.sinks.hdfs_sink.hdfs.rollSize      = 0
agent1.sinks.hdfs_sink.hdfs.rollCount     = 100000
agent1.sinks.hdfs_sink.hdfs.fileType      = DataStream
agent1.sinks.hdfs_sink.channel            = mem_channel

#!/bin/bash
# Bind Tomcat services to this address.  Defaults to all interfaces.
export HOST=`/sbin/ifconfig | grep 10.5.40 | awk '{print $2}' | cut -d: -f2`

# make sure tomcat uses a pid so we can kill properly
export CATALINA_PID=/var/run/tomcat/tomcat.pid

CATALINA_OPTS="-server -Djava.rmi.server.hostname=${HOST} -Dcom.sun.management.jmxremote.port=8999 -Dcom.sun.management.jmxremote.ssl=false  -Dcom.sun.management.jmxremote.authenticate=false"

JAVA_OPTS="-Xms512M -Xmx6G -XX:MaxPermSize=512m -XX:ThreadStackSize=256 -XX:+UseParallelGC -XX:+UseParallelOldGC -XX:+UseAdaptiveSizePolicy -Dnetworkaddress.cache.ttl=30 -Dnetworkaddress.cache.negative.ttl=1 -Duser.timezone=US/Eastern -XX:+PrintGCDetails -Xloggc:/data/apps/tomcat7/logs/gc.log -Dsun.net.client.defaultConnectTimeout=20000 -Dsun.net.client.defaultReadTimeout=20000 $JAVA_OPTS"

export CATALINA_OPTS JAVA_OPTS


[program:<%= @name %>]
autorestart=true
stopasgroup=true
redirect_stderr=true
stdout_logfile=/var/log/supervisor/%(program_name)s.log
<% node[:supervisor][:app][@name].each do |k,v| %>
<%= k %>=<%= v %>
<% end %>
<% if node[:supervisor][:directives] %>
<% node[:supervisor][:directives].each do |k,v| %>
<%= k %>=<%= v %>
<% end %>
<% end %>

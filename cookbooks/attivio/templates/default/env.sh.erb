#!/bin/bash
export ATTIVIO_HOME=<%= @attivio_home %>
export ATTIVIO_PROJECT=<%= @attivio_project %>/iheartradio3
export PATH=$ATTIVIO_HOME/bin:$PATH

<% if @zookeeper -%>
# Config server host1:port1,host2:port2,host3:port3....
export ZOOKEEPER_HOST=<%= @zookeeper.join(":15000,") %>:15000
export ATTIVIO_ZOOKEEPER_HOST=<%= @zookeeper.join(":15000,") %>:15000

if [ "$ATTIVIO_ZOOKEEPER_INFO"=="" ]; then
  export ZOOINFO=$2
else
  export ZOOINFO=$ATTIVIO_ZOOKEEPER_INFO
fi
<% end -%>

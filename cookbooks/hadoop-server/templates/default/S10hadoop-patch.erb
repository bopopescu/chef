#!/bin/bash
#
# patch hadoop client per https://jira.ccrd.clearchannel.com/browse/OPS-5657
#
# chkconfig: - 98 02
# description: Client component of the Chef systems integration framework.


exec="<%= @client_bin %>"
prog="hadoop-patch"

[ -e /etc/sysconfig/$prog ] && . /etc/sysconfig/$prog

start() {

    if [ -f /sys/kernel/mm/redhat_transparent_hugepage/defrag ]
    then
        echo never > /sys/kernel/mm/redhat_transparent_hugepage/defrag
    fi
}

stop() {
    exit 2
}


case "$1" in
    start)
        $1
        ;;
    stop)
        ;;
    *)
        echo $"Usage: $0 {start|stop}"
        exit 2
esac
exit $?

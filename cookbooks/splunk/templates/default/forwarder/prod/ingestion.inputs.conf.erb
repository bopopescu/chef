[default]
host = <%= node['hostname'] %>

[monitor://<%= node['splunk']['forwarder_home']%>/var/log/splunk]
    disabled = 0

[monitor://<%= node['splunk']['forwarder_home']%>/var/log/secure]
    blacklist = \.(gz|bz2)$
    disabled = 0

[monitor:///data/dbdata/pg_log]
    blacklist = \.(gz|bz2)$
    disabled = 0

[monitor:///var/log/syslog]
    blacklist = \.(gz|bz2)$
    disabled = 0

[monitor:///var/log/messages]
    blacklist = \.(gz|bz2)$
    disabled = 0
